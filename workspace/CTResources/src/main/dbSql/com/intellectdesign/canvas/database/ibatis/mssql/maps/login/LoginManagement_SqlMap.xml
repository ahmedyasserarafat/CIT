	</resultMap>

	<select id="LOGIN_CHECK_USER_EXISTENCE_SELECT_NICKNAME_MASTER"
		parameterClass="java.util.HashMap" resultMap="LOGIN_CHECK_USER_EXISTENCE">
		SELECT
		DISTINCT
		A.USER_NO USER_NO,
		A.LOGIN_ID,
		A.STATUS_FLAG,
		A.AUTHENTICATION_TYPE,
		A.GCIF_COUNT,
		COALESCE(G.OD_FIRST_NAME,'') + ' ' + COALESCE(G.OD_MIDDLE_NAME,'') + ' ' +
		COALESCE(G.OD_LAST_NAME,'') USER_NAME,
		G.OD_GCIF,A.GCIF,
		DATENAME(dw,current_timestamp) +', ' + Convert(VARCHAR(30),CURRENT_TIMESTAMP, 113) CURR_DATE,
		Convert(VARCHAR(10),CURRENT_TIMESTAMP, 103) DISPLAY_DATE,
		A.CUSTOMER_TYPE,
		A.CERT_SERIAL_NUMBER,
		G.COD_CIF,
		C.FIRST_NAME,
		C.MIDDLE_NAME,
		C.LAST_NAME,
		case
		C.LAST_LOGIN_DATE
		when
		NULL
		then ''
		else
		CONVERT(VARCHAR(30),C.LAST_LOGIN_DATE, 120) end as LAST_LOGIN_DATE,
		C.OD_UDF16 OD_UDF16,
		C.OD_UDF15 OD_UDF15
		FROM
		ORBIIBS_NICKNAME A ,
		OD_USER_ATTRIBUTE B,
		OD_CUSTOMER_MASTER_TBL G,
		OD_USERS_MB C
		WHERE
		A.USER_NO=B.USER_NO
		AND
		A.GCIF = G.OD_GCIF
		AND
		C.OD_USER_NO = A.USER_NO
		AND
		C.OD_GCIF = A.GCIF
		AND
		(A.LOGIN_ID = #LOGIN_ID#)
	</select>

	<resultMap id="CHECK_USER_SESSION" class="java.util.HashMap">
		<result property="CT_JSESSION_ID" nullValue="" column="CT_JSESSION_ID"
			javaType="java.lang.String" jdbcType="VARCHAR" />
	</resultMap>

	<select id="CHECK_SELECT_USER_SESSION" parameterClass="java.util.HashMap"
		resultMap="CHECK_USER_SESSION">
		SELECT
		CT_JSESSION_ID
		FROM
		OD_SESSION_LOG
		WHERE
		CT_USER_NO = #CT_USER_NO#
	</select>

	<delete id="ADD_OD_SESSION_LOG_DELETE_OD_SESSION_LOG"
		parameterClass="java.util.HashMap">
		DELETE
		FROM
		OD_SESSION_LOG
		WHERE
		CT_USER_NO = #CT_USER_NO#
		AND
		CT_JSESSION_ID = #CT_JSESSION_ID#
	</delete>

